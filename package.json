{
  "name": "jia-integrated-management-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Integrated Management System for JIA Business Center",
  "author": "_Nu1L",
  "license": "MIT",
  "homepage": "https://github.com/6reenhorn/JIA-Integrated-Management-System",
  "repository": {
    "type": "git",
    "url": "https://github.com/6reenhorn/JIA-Integrated-Management-System.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite --config client/vite.config.ts",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build --config client/vite.config.ts",
    "lint": "eslint .",
    "preview": "vite preview --config client/vite.config.ts",
    "transpile:electron": "tsc --project electron/tsconfig.json",
    "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/plist": "^3.0.5",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/verror": "^1.10.11",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
